<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Crear_Ti.Crear_nuevo_ti">

    <!-- Barra superior -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/flechaizq"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="200dp"
            android:layout_toStartOf="@+id/notificationButton"
            android:layout_toEndOf="@id/backButton"
            android:text="Crear Ticket"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/notificationButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/notifiacion"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            app:tint="#FFFFFF" />

    </RelativeLayout>

    <!-- Contenido del formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ticket-C051"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@color/celestito"
                android:padding="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione el Problema"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/problemSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/bordes"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle el Problema"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/problemDetailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detalle brevemente el problema."
                android:inputType="textMultiLine"
                android:minLines="5"
                android:background="@drawable/bordes"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="¿En qué área se presento el Problema?"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/areaSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/bordes"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjunte una fotografía de la falla"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:padding="6dp">
                <Button
                    android:id="@+id/SeleccionarArch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar Archivo"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton_tiket"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/SeleccionarArch"
                    android:text="Ningún archivo seleccionado"
                    android:gravity="center"
                    android:textSize="14sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/sendTicketButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENVIAR TICKET"
                android:background="@drawable/boton_tiket"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>