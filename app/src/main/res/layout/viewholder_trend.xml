<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="205dp"
    android:layout_height="240dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fallos"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            app:srcCompat="@drawable/imagen_de_whatsapp_2024_09_18_a_las_01_26_21_d4862afa" />

        <TextView
            android:id="@+id/problema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Falta de Ingeniero"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18/09/2024"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mucha Fe en Dios"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>