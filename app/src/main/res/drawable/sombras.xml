<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo blanco con bordes redondeados -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo -->
            <corners android:radius="10dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Sombra -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" android:alpha="0.2"/> <!-- Color de sombra con opacidad -->
            <corners android:radius="10dp"/> <!-- Bordes redondeados para que coincida -->
        </shape>
    </item>

</layer-list>